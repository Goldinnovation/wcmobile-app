{
  "expo": {
    "name": "wcmobile-app",
    "slug": "wcmobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon2.png",
    "userInterfaceStyle": "automatic",  
    "_commentto_userInterfaceStyle": "changed the value from light to automatic", 
    
    "platforms": ["ios", "android","web"],
    "splash": {
      "image": "./assets/splash/wcsc2.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "newArchEnabled": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "newArchEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(Worthsec) to use your location."
        }
       
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(Worthsec) to access your camera",
          "microphonePermission": "Allow $(Worthsec) to access your microphone",
          "recordAudioAndroid": true
        }
      ], 
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera."
        }
      ]
    ]
  }
  
}

